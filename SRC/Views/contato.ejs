
<%- include('include/head')%>
<%- include('include/nav')%>
  
<div class="container">
  <div class="row">

    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-3">
      <h1 class=" text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite seus contatos</p>

      <%- include('include/message') %>
      <% if(contato._id){%>
      <form action="/contato/edit/<%= contato._id %>" method="post" class="contato">
        <% } else { %>
          <form action="/contato/register" method="post">
          <% } %>
        <input type="hidden" name="_csrf" value= <%= csrfToken %>>
        <div class="form-group">
          <label>Nome</label>
          <input value="<%= contato.nome %>"type="text" class="form-control mt-3""  name="nome">
        </div>

        <div class="form-group">
          <label>Sobrenome</label>
          <input  value="<%= contato.sobrenome %> " type="text" class="form-control mt-3"" name="sobrenome" >
        </div>

        <div class="form-group">
          <label>Email</label>
          <input  value="<%= contato.email %>" type="email" class="form-control mt-3"" name="email" >
        </div>

        <div class="form-group">
          <label>Telefone</label>
          <input value="<%= contato.telefone %> " type="tel" class="form-control mt-3"" name="telefone" >
        </div>


        <button type="submit" class="btn btn-primary mt-3">Salvar</button> 
        <a class="btn btn-primary mt-3" href="/">Voltar</a>
      </form>
     
   </div>

    <div class="col-lg-2"></div>

  </div>
</div>


